<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyContacts.Views.EditContactPage">
	<StackLayout Padding="20">
		<Entry x:Name="NameEntry" Placeholder="Name" />
		<Entry x:Name="PhoneEntry" Placeholder="Phone Number" Keyboard="Telephone" />
		<Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" />
		<Button Text="Save" BackgroundColor="Green" Clicked="SaveButton_Clicked" />
		<Button Text="Delete" BackgroundColor="red" Clicked="DeleteButton_Clicked" />
	</StackLayout>
</ContentPage>